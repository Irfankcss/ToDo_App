<div class="container py-4">
  <%= form_with(model: @task, class: "card p-4 shadow-sm") do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Task", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :done, class: "form-check-input", id: "doneCheck" %>
      <%= f.label :done, "Done?", class: "form-check-label", for: "doneCheck" %>
    </div>

    <div class="mb-3">
      <%= f.label :timestamp, "Date and Time", class: "form-label" %>
      <%= f.datetime_local_field :timestamp, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :category_id, "Category" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select task category" }, class: "form-select" %>
    </div>

    <%= f.submit "Save Task", class: "btn btn-success" %>
  <% end %>
</div>
